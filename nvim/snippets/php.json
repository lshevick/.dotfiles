{
	"php tag": {
		"prefix": "php",
		"body": [
			"<?php", 
             "$0",   
            "?>"
		]
	},

	"php print_r": {
		"prefix":  "print",
		"body": ["<?php", "print_r($0);", "?>"],
		"description": "php print_r inside html."
	},

    "quick echo": {
        "prefix": "echo",
        "body": ["<?= $0 ?>"],
        "description": "short echo syntax."
    },

	"php try/catch": {
		"prefix": "trca",
		"body": [
			"try {", 
             "$0",   
            "} catch (\Exception $e) {",
            "   Log::info($e->getMessage() . ' at line ' . $e->getLine() . ' in ' . $e->getFile());",
            "}"
		]
	}
}
